<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="#99f8F1CD"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dimen_20"
        android:layout_gravity="center"
        android:layout_height="350dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_marginRight="@dimen/dimen_80"
            android:layout_marginLeft="@dimen/dimen_80"
            android:textStyle="bold"
            android:id="@+id/top_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20"
            android:fontFamily="@font/notoseriftc__medium"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="Unlock an unforgettable stay"
            android:textColor="#420052"
            android:textSize="26sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/salutation_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_12"
                android:paddingLeft="@dimen/dimen_5"
                android:paddingRight="@dimen/dimen_5"
                android:layout_marginTop="@dimen/dimen_15"
                android:dropDownSelector="@color/white"
                android:background="@drawable/otp_bg"
                android:layout_marginBottom="@dimen/dimen_12"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/et_firstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_20"
                android:layout_weight="0.8"
                android:background="@drawable/otp_bg"
                android:fontFamily="@font/notoseriftc__medium"
                android:hint="First Name"
                android:includeFontPadding="false"
                android:padding="@dimen/dimen_15"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="#A3a3a3"
                android:textCursorDrawable="@color/black"
                android:textSize="24sp" />

        </LinearLayout>

        <EditText
                android:id="@+id/et_lastname"
                android:singleLine="true"
                android:textCursorDrawable="@color/black"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:includeFontPadding="false"
                android:padding="@dimen/dimen_15"
                android:textColorHint="#A3a3a3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/otp_bg"
                android:hint="Last Name"
                android:fontFamily="@font/notoseriftc__medium"
                android:layout_margin="@dimen/dimen_20"/>


            <EditText
                android:id="@+id/et_email"
                android:singleLine="true"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:textCursorDrawable="@color/black"
                android:includeFontPadding="false"
                android:padding="@dimen/dimen_15"
                android:textColorHint="#A3a3a3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/otp_bg"
                android:hint="Email Address"
                android:fontFamily="@font/notoseriftc__medium"
                android:layout_margin="@dimen/dimen_20"/>

        <com.hbb20.CountryCodePicker
            android:id="@+id/country_code_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_10"
            app:ccp_textGravity="LEFT"
            android:layout_margin="@dimen/dimen_20"
            app:ccpDialog_backgroundColor="@color/white"
            android:background="@drawable/otp_bg"
            app:ccp_textSize="22sp"
            app:ccp_contentColor="@color/black"/>



            <EditText
                android:maxLength="10"
                android:id="@+id/et_ph_num"
                android:singleLine="true"
                android:inputType="number"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:includeFontPadding="false"
                android:padding="@dimen/dimen_15"
                android:textColorHint="#A3a3a3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/otp_bg"
                android:hint="Mobile Number"
                android:textCursorDrawable="@color/black"
                android:fontFamily="@font/notoseriftc__medium"
                android:layout_margin="@dimen/dimen_20"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/reg_check_box"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"/>

            <TextView
                android:layout_marginTop="@dimen/dimen_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notoseriftc__medium"
                android:textSize="16sp"
                android:textColor="#575656"
                android:text="I agree with the terms and conditions and privacy policy"
                android:includeFontPadding="false"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>


        <Button
            android:layout_marginTop="@dimen/dimen_10"
            android:id="@+id/btn_confirm_and_send_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_60"
            android:layout_marginRight="@dimen/dimen_60"
            android:layout_marginBottom="@dimen/dimen_30"
            android:background="@color/btn_color"
            android:fontFamily="@font/notoseriftc__medium"
            android:paddingTop="@dimen/dimen_10"
            android:includeFontPadding="false"
            android:paddingBottom="@dimen/dimen_10"
            android:text="CONFIRM and send OTP"
            android:lineSpacingExtra="@dimen/dimen_5"
            android:textColor="@color/white"
            android:textSize="24sp" />



    </LinearLayout>

</ScrollView>