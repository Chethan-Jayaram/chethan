<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="1dp"
    android:layout_marginBottom="@dimen/dimen_20"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lyt_tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView

            android:id="@+id/tv_coorg_subtitle_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e6decc"
            android:fontFamily="@font/notosanstc_light"
            android:justificationMode="inter_word"
            android:padding="@dimen/dimen_30"
            android:textColor="@color/black"
            android:textSize="24sp" />


    </LinearLayout>

    <!--removed margin 15 dp for covid update-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lyt_tv_desc"
        android:background="@drawable/border_layout"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_coorg_recreation"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="matrix"
                android:layout_gravity="center"/>
            <TextView

                android:id="@+id/tv_coorg_recretion_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20"
                android:gravity="center"
                android:textSize="24sp"
                android:layout_marginTop="220dp"
                android:background="@drawable/border_edges"
                android:fontFamily="@font/notoseriftc_regular"
                android:includeFontPadding="false"
                android:padding="@dimen/dimen_10"
                android:textColor="@color/white" />
        </RelativeLayout>


        <TextView

            android:id="@+id/tv_coorg_recretion_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_22"
            android:layout_margin="@dimen/dimen_15"
            android:fontFamily="@font/notosanstc_light"
            android:justificationMode="inter_word"
            android:textColor="#000000" />
        <RelativeLayout

            android:paddingStart="@dimen/dimen_15"
            android:paddingTop="@dimen/dimen_10"
            android:paddingBottom="@dimen/dimen_15"
            android:background="@drawable/textview_border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_time"
                    android:layout_gravity="center_vertical"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/time"
                    android:layout_marginRight="@dimen/dimen_2"/>




                <TextView
                    android:id="@+id/tv_coorg_recretion_start_timing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:textColor="@color/black"
                    android:fontFamily="@font/notosanstc_bold"
                    android:layout_margin="@dimen/dimen_2"
                    android:textSize="16sp" />

                <TextView
                    android:fontFamily="@font/notosanstc_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginLeft="@dimen/dimen_4"
                    android:layout_marginRight="@dimen/dimen_4"/>

                <TextView
                    android:id="@+id/tv_coorg_recretion_end_timing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/notosanstc_bold"
                    android:layout_margin="@dimen/dimen_2"
                    android:textSize="16sp" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>