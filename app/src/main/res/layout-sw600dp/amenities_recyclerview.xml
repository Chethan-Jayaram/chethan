<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="@dimen/dimen_10"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <TextView
        android:layout_alignParentLeft="true"
        android:id="@+id/tv_amenities_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adaptor"
        android:fontFamily="@font/notosanstc_medium"
        android:includeFontPadding="false"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:paddingLeft="@dimen/dimen_10"
        android:paddingTop="@dimen/dimen_10"/>

    <TextView
        android:id="@+id/tv_amenities_item_price"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_amenities_item_name"
        android:text="0.00"
        android:textColor="#070707"
        android:textSize="22sp"
        android:includeFontPadding="false"
        android:fontFamily="@font/notosanstc_light"
        android:paddingLeft="@dimen/dimen_10"/>


    <include
        layout="@layout/item_selector"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/dimen_20"
        android:layout_width="wrap_content"/>


</RelativeLayout>