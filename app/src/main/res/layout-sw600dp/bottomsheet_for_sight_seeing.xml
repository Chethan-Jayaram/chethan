<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_25"
        android:layout_marginTop="@dimen/dimen_20"
        android:text="SPECIAL INSTRUCTION"
        android:lineSpacingExtra="9sp"
        android:fontFamily="@font/notosanstc_bold"
        android:includeFontPadding="false"
        android:textColor="#a5a5a5"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/special_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosanstc_regular"
        android:layout_marginLeft="@dimen/dimen_25"
        android:layout_marginRight="@dimen/dimen_25"
        android:hint="Enter special Instruction"
        android:includeFontPadding="false"
        android:textSize="24sp"
        android:padding="@dimen/dimen_10"
        android:lines="3"
        android:gravity="top"
        android:background="@drawable/et_border_layout"
        android:textColor="@color/black"
        android:maxLength="150"
        android:layout_marginTop="@dimen/dimen_10"
        android:textColorHint="#a7a7a7"/>

    <Button
        android:gravity="center"
        android:padding="@dimen/dimen_15"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dimen_20"
        android:id="@+id/bt_confirm_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/custom_purple"
        android:fontFamily="@font/notosanstc_bold"
        android:includeFontPadding="false"
        android:textAllCaps="false"
        android:text="Confirm"
        android:lineSpacingExtra="@dimen/dimen_11"
        android:textColor="@color/white"
        android:textSize="24sp" />

</LinearLayout>