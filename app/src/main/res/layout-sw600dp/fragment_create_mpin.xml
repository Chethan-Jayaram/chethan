<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/login_bg"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="#99f8F1CD"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dimen_30"
        android:layout_gravity="center"
        android:layout_height="345dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:textStyle="bold"
            android:id="@+id/top_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_30"
            android:fontFamily="@font/notoseriftc__medium"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="Set your M-PIN"
            android:textColor="#420052"
            android:textSize="30sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20"
            android:fontFamily="@font/notoseriftc__medium"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="Create M-pin?"
            android:textColor="#420052"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="28dp"
            android:orientation="horizontal">

            <EditText
                android:fontFamily="@font/notoseriftc__medium"
                android:includeFontPadding="false"
                android:textCursorDrawable="@color/black"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:id="@+id/et1_one"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@drawable/otp_bg"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center" />

            <EditText
                android:includeFontPadding="false"
                android:textCursorDrawable="@color/black"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/notoseriftc__medium"
                android:id="@+id/et1_two"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@drawable/otp_bg"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center" />

            <EditText
                android:includeFontPadding="false"
                android:textCursorDrawable="@color/black"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/notoseriftc__medium"
                android:id="@+id/et1_three"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@drawable/otp_bg"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center" />

            <EditText
                android:includeFontPadding="false"
                android:textCursorDrawable="@color/black"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/notoseriftc__medium"
                android:id="@+id/et1_four"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@drawable/otp_bg"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:fontFamily="@font/notoseriftc__medium"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="Retype M-pin?"
            android:textColor="#420052"
            android:textStyle="bold"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="28dp"
            android:orientation="horizontal">

            <EditText
                android:fontFamily="@font/notoseriftc__medium"
                android:includeFontPadding="false"
                android:textCursorDrawable="@color/black"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:id="@+id/et2_one"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@drawable/otp_bg"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center" />

            <EditText
                android:includeFontPadding="false"
                android:textCursorDrawable="@color/black"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/notoseriftc__medium"
                android:id="@+id/et2_two"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@drawable/otp_bg"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center" />

            <EditText
                android:includeFontPadding="false"
                android:textCursorDrawable="@color/black"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/notoseriftc__medium"
                android:id="@+id/et2_three"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@drawable/otp_bg"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center" />

            <EditText
                android:includeFontPadding="false"
                android:textCursorDrawable="@color/black"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/notoseriftc__medium"
                android:id="@+id/et2_four"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="@drawable/otp_bg"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center" />

        </LinearLayout>


        <Button
            android:id="@+id/btn_confirm_mpin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_80"
            android:layout_marginRight="@dimen/dimen_80"
            android:layout_marginBottom="@dimen/dimen_40"
            android:background="@color/btn_color"
            android:fontFamily="@font/notoseriftc__medium"
            android:paddingTop="@dimen/dimen_15"
            android:includeFontPadding="false"
            android:paddingBottom="@dimen/dimen_15"
            android:text="CONFIRM"
            android:lineSpacingExtra="@dimen/dimen_5"
            android:textColor="@color/white"
            android:letterSpacing="0.1"
            android:textSize="26sp" />



    </LinearLayout>

</ScrollView>