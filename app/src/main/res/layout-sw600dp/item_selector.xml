<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:background="@drawable/rectangle_background"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/dimen_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:background="@color/white"
                android:padding="@dimen/dimen_1"
                android:layout_marginLeft="@dimen/dimen_6"
                android:layout_marginRight="@dimen/dimen_6"
                android:layout_weight="0.3"
                android:tint="@color/black"
                app:srcCompat="@drawable/img_menu_remove"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <View
                android:layout_margin="2dp"
                android:layout_width="2dp"
                android:layout_height="fill_parent"
                android:background="#D3D3D3" />


            <TextView
                android:background="@color/white"
                android:gravity="center"
                android:layout_weight="0.4"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/black"
                android:layout_margin="@dimen/dimen_1"
                android:fontFamily="@font/notoseriftc__medium"
                android:textSize="20sp"
                android:textStyle="bold"
                android:includeFontPadding="false"/>

            <View
                android:layout_margin="2dp"
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="#D3D3D3" />

            <ImageView
                android:background="@color/white"
                android:tint="@color/black"
                android:layout_marginRight="@dimen/dimen_6"
                android:layout_marginLeft="@dimen/dimen_6"
                android:layout_weight="0.3"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/img_menu_add" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>




</LinearLayout>