<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="@dimen/dimen_20"
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We are always at your service"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:fontFamily="@font/notoseriftc__medium"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/dimen_40"/>



    <EditText
        android:paddingBottom="@dimen/dimen_15"
        android:id="@+id/txt_assistance"
        android:layout_width="match_parent"
        android:hint="Type the requirement here"
        android:includeFontPadding="false"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosanstc_regular"
        android:layout_below="@+id/heading"
        android:backgroundTint="@color/black"
        android:layout_marginLeft="@dimen/dimen_40"
        android:layout_marginRight="@dimen/dimen_40"
        android:textColorHint="#a7a7a7"
        android:textColor="@color/black"
        android:textSize="22sp"/>


    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_assi_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/btn_color"
        android:fontFamily="@font/notosanstc_medium"
        android:paddingTop="@dimen/dimen_20"
        android:includeFontPadding="false"
        android:paddingBottom="@dimen/dimen_20"
        android:text="Submit"
        android:textAllCaps="false"
        android:lineSpacingExtra="@dimen/dimen_11"
        android:textColor="@color/white"
        android:textSize="25sp" />

</RelativeLayout>