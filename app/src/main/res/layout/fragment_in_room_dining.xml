<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.sectionsfragment.WineDineFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/top_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f5efe4"
                android:fontFamily="@font/notoseriftc_regular"
                android:includeFontPadding="false"
                android:padding="@dimen/dimen_20"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                     android:layout_margin="@dimen/dimen_10"
                        android:id="@+id/break_fast_menu"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:background="@drawable/round_shape"
                        android:fontFamily="@font/notoseriftc_regular"
                        android:gravity="center"
                        android:text="The \nBreakfast \nMenu"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_margin="@dimen/dimen_10"
                        android:id="@+id/dining_menu"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:background="@drawable/round_shape"
                        android:fontFamily="@font/notoseriftc_regular"
                        android:gravity="center"
                        android:text="The All \n Day Dining \n Menu"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_margin="@dimen/dimen_10"
                        android:id="@+id/children_menu"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right"
                        android:background="@drawable/round_shape"
                        android:fontFamily="@font/notoseriftc_regular"
                        android:gravity="center"
                        android:text="The \nChildren's \nMenu"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_margin="@dimen/dimen_10"
                        android:id="@+id/wine_menu"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/round_shape"
                        android:fontFamily="@font/notoseriftc_regular"
                        android:gravity="center"
                        android:text="The \nWine \n List"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/beverage_menu"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="@dimen/dimen_10"
                        android:background="@drawable/round_shape"
                        android:fontFamily="@font/notoseriftc_regular"
                        android:gravity="center"
                        android:text="The \nBeverage \nList"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/midnigt_menu"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_margin="@dimen/dimen_10"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/round_shape"
                        android:fontFamily="@font/notoseriftc_regular"
                        android:gravity="center"
                        android:text="The \nMidnight \nMenu"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>