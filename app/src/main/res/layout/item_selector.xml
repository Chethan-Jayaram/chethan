<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/lyt_counter"
        android:layout_width="@dimen/dimen_80"
        android:layout_height="@dimen/dimen_30"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:background="@drawable/purple_border_layout"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_1">

            <ImageView
                android:id="@+id/img_remove"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                android:background="@color/white"
                android:paddingLeft="@dimen/dimen_4"
                android:paddingRight="@dimen/dimen_4"
                android:tint="@color/black"
                app:srcCompat="@drawable/img_menu_remove" />

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:background="#e5e5e5" />


            <TextView
                android:id="@+id/tv_quantity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.4"
                android:background="@color/white"
                android:fontFamily="@font/notosanstc_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_margin="2dp"
                android:background="#e5e5e5" />

            <ImageView
                android:id="@+id/img_add"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                android:background="@color/white"
                android:paddingLeft="@dimen/dimen_4"
                android:paddingRight="@dimen/dimen_4"
                android:tint="@color/black"
                app:srcCompat="@drawable/img_menu_add" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:visibility="gone"
        android:id="@+id/lyt_add"
        android:layout_width="@dimen/dimen_80"
        android:layout_height="@dimen/dimen_30">


        <TextView
            android:id="@+id/bt_add"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/cardview_border_layout"
            android:fontFamily="@font/notosanstc_medium"
            android:gravity="center"
            android:includeFontPadding="false"
            android:padding="@dimen/dimen_2"
            android:text="Add +"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="14sp" />

    </androidx.cardview.widget.CardView>


</RelativeLayout>