<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_20"
        android:background="#f5efe4"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="@dimen/dimen_40"
            android:layout_gravity="center"
            android:layout_width="110dp"
            android:layout_height="110dp"
            app:srcCompat="@drawable/ic_baseline_check_circle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thank you for placing your request. Please allow us 30 minutes to update the status of the same"
            android:textColor="#1c1c1c"
            android:textSize="14sp"
            android:fontFamily="@font/notoseriftc__medium"
            android:layout_margin="@dimen/dimen_18"
            android:paddingBottom="@dimen/dimen_20"/>

    </LinearLayout>

</RelativeLayout>