<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
 android:background="@color/white"
    android:orientation="vertical"
    android:padding="15dp">

    <ImageView
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginLeft="@dimen/dimen_20"
        android:id="@+id/img_logo"
        android:layout_alignParentLeft="true"
        android:layout_width="52dp"
        android:layout_height="52dp" />

    <LinearLayout
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/img_logo"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_toRightOf="@+id/img_logo"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notoseriftc__medium"
            android:includeFontPadding="false"
            android:textColor="@color/black"
            android:text="Aurika"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/item_subtitle"
            android:layout_width="match_parent"
            android:text="Login to an unforgatable stay"
            android:fontFamily="@font/notosanstc_bold"
            android:includeFontPadding="false"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_12"
            android:textColor="@color/black"
            android:textSize="13dp" />
    </LinearLayout>

    <TextView

        android:id="@+id/item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_view"
        android:layout_marginLeft="@dimen/dimen_10"
        android:fontFamily="@font/notosanstc_regular"
        android:text="Use your fingerprint to verify your identity"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_20"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/img_fingerprint"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/item_description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_10"
        app:srcCompat="@drawable/img_fingerprint" />





    <Button
        android:text="Cancel"
        android:layout_marginTop="@dimen/dimen_20"
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/notosanstc_medium"
        android:includeFontPadding="false"
        android:padding="@dimen/dimen_10"
        android:layout_below="@id/img_fingerprint"
        android:background="@drawable/button_corner_radius"
        android:textColor="@color/white" />

</RelativeLayout>