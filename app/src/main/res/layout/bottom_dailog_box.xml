<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lyt_select_date"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notoseriftc_regular"
            android:includeFontPadding="false"
            android:text="When do you need this?"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginTop="@dimen/dimen_20"/>

        <TextView
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#a9a9a9"
            android:text="Date"
            android:layout_marginLeft="@dimen/dimen_20"/>

        <LinearLayout
            android:padding="@dimen/dimen_5"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_margin="5dp"
                android:padding="@dimen/dimen_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/dimen_10">
                <Button
                    android:id="@+id/bt_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:fontFamily="@font/notoseriftc_regular"
                    android:includeFontPadding="false"
                    android:textAllCaps="false"
                    android:text="Today"
                    android:lineSpacingExtra="@dimen/dimen_10"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:padding="@dimen/dimen_5"
                android:layout_marginTop="@dimen/dimen_5"
                android:layout_marginBottom="@dimen/dimen_5"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/dimen_10">

                <Button
                    android:id="@+id/bt_tomorrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:fontFamily="@font/notoseriftc_regular"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="@dimen/dimen_10"
                    android:padding="@dimen/dimen_10"
                    android:text="Tomorrow"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                android:id="@+id/select_date"
                android:layout_marginTop="@dimen/dimen_5"
                android:layout_marginBottom="@dimen/dimen_5"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/dimen_10">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:paddingTop="@dimen/dimen_10"
                        android:paddingLeft="@dimen/dimen_10"
                        android:paddingBottom="@dimen/dimen_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notoseriftc_regular"
                        android:includeFontPadding="false"
                        android:textAllCaps="false"
                        android:text="Select Date"
                        android:lineSpacingExtra="@dimen/dimen_10"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ccp_down_arrow"/>

                </LinearLayout>




            </androidx.cardview.widget.CardView>




        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginTop="@dimen/dimen_20"
            android:text="Time"
            android:textColor="#a9a9a9"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:layout_marginTop="@dimen/dimen_5"
                android:layout_marginBottom="@dimen/dimen_5"
                android:layout_width="80dp"
                android:background="@color/custom_purple"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/dimen_10">

                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="#f7e4ff"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginTop="@dimen/dimen_5"
                        android:layout_alignParentTop="true"
                        android:id="@+id/img_up_hr"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_baseline_arrow_drop_up_24"/>

                    <TextView
                        android:id="@+id/tv_hr"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="09"
                        android:fontFamily="@font/notosanstc_medium"
                        android:includeFontPadding="false"
                        android:textStyle="bold"
                        android:layout_centerInParent="true"
                        android:textColor="@color/black"
                        android:layout_below="@id/img_up_hr"/>

                    <ImageView
                        android:layout_marginBottom="@dimen/dimen_5"
                        android:layout_marginTop="@dimen/dimen_5"
                        android:layout_alignParentBottom="true"
                        android:id="@+id/img_down_hr"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ccp_down_arrow"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=":"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/dimen_30"
                android:textStyle="bold"
                android:textColor="@color/black"/>



            <androidx.cardview.widget.CardView
                android:layout_marginTop="@dimen/dimen_5"
                android:layout_marginBottom="@dimen/dimen_5"
                android:layout_width="80dp"
                android:background="@color/custom_purple"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/dimen_10">

                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="#f7e4ff"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginTop="@dimen/dimen_5"
                        android:layout_alignParentTop="true"
                        android:id="@+id/img_up_min"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_baseline_arrow_drop_up_24"/>

                    <TextView
                        android:id="@+id/tv_min"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="30"
                        android:fontFamily="@font/notosanstc_medium"
                        android:includeFontPadding="false"
                        android:textStyle="bold"
                        android:layout_centerInParent="true"
                        android:textColor="@color/black"
                        android:layout_below="@id/img_up_min"/>

                    <ImageView
                        android:layout_marginBottom="@dimen/dimen_5"
                        android:layout_marginTop="@dimen/dimen_5"
                        android:layout_alignParentBottom="true"
                        android:id="@+id/img_down_min"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ccp_down_arrow"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_marginTop="@dimen/dimen_5"
                android:layout_marginBottom="@dimen/dimen_5"
                android:layout_marginLeft="@dimen/dimen_15"
                android:layout_width="70dp"
                android:background="@color/custom_purple"
                android:layout_height="match_parent"
                app:cardCornerRadius="@dimen/dimen_10">

                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="#f7e4ff"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">


                    <TextView
                        android:layout_marginTop="@dimen/dimen_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="AM"
                        android:fontFamily="@font/notosanstc_medium"
                        android:includeFontPadding="false"
                        android:textStyle="bold"
                        android:layout_centerInParent="true"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_marginTop="@dimen/dimen_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="PM"
                        android:fontFamily="@font/notosanstc_medium"
                        android:includeFontPadding="false"
                        android:textStyle="bold"
                        android:layout_centerInParent="true"
                        android:textColor="#A9A9A9" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <Button
            android:gravity="center"
            android:padding="@dimen/dimen_10"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/dimen_20"
            android:id="@+id/bt_save_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/custom_purple"
            android:fontFamily="@font/notoseriftc__medium"
            android:includeFontPadding="false"
            android:textAllCaps="false"
            android:text="Save"
            android:lineSpacingExtra="@dimen/dimen_11"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/lyt_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <CalendarView
            android:theme="@style/AppTheme"
            android:layout_gravity="center_vertical"
            android:id="@+id/calendar_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </CalendarView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_back"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/dimen_10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#a7a7a7"
                android:fontFamily="@font/notoseriftc__medium"
                android:includeFontPadding="false"
                android:textAllCaps="false"
                android:text="Back"
                android:lineSpacingExtra="@dimen/dimen_11"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bt_save"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/dimen_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/custom_purple"
                android:fontFamily="@font/notoseriftc__medium"
                android:includeFontPadding="false"
                android:textAllCaps="false"
                android:text="Save"
                android:lineSpacingExtra="@dimen/dimen_11"
                android:textColor="@color/white"
                android:textSize="18sp" />


        </LinearLayout>

    </LinearLayout>




</RelativeLayout>