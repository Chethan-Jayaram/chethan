<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_above="@+id/btn_update_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="120dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:layout_height="120dp"
                android:layout_marginTop="@dimen/dimen_50"/>

            <RelativeLayout
                android:layout_marginTop="@dimen/dimen_40"
                android:layout_marginBottom="@dimen/dimen_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_margin="2dp"
                    android:background="#A9A9A9" />


            </RelativeLayout>


            <TextView
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:fontFamily="@font/notoseriftc__medium"
                android:text="General Details"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_marginRight="@dimen/dimen_15"
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_firstname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="First Name"
                        android:textSize="16sp"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/notoseriftc_light"
                        android:textColor="@color/black"/>

                    <EditText
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notoseriftc__medium"
                        android:textColor="@color/black"
                        android:layout_below="@+id/txt_firstname"
                        android:includeFontPadding="false"
                        android:text="Chethan"/>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_lastname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last Name"
                        android:textSize="16sp"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/notoseriftc_light"
                        android:textColor="@color/black"/>

                    <EditText
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notoseriftc__medium"
                        android:textColor="@color/black"
                        android:layout_below="@+id/txt_lastname"
                        android:includeFontPadding="false"
                        android:text="Jayaram"/>


                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_marginRight="@dimen/dimen_15"
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:textSize="16sp"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/notoseriftc_light"
                        android:textColor="@color/black"/>

                    <Spinner
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notoseriftc__medium"
                        android:textColor="@color/black"
                        android:layout_below="@+id/txt_gender"
                        android:includeFontPadding="false" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_marital_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Marital Status"
                        android:textSize="16sp"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/notoseriftc_light"
                        android:textColor="@color/black"/>

                    <Spinner
                        style="@style/Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notoseriftc__medium"
                        android:textColor="@color/black"
                        android:layout_below="@+id/txt_marital_status"
                        android:includeFontPadding="false"/>


                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:layout_marginTop="@dimen/dimen_20"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:fontFamily="@font/notoseriftc__medium"
                android:text="Contact / Login details"
                android:textStyle="bold"
                android:textColor="@color/black"/>



            <TextView
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile number"
                android:textSize="16sp"
                android:includeFontPadding="false"
                android:fontFamily="@font/notoseriftc_light"
                android:textColor="@color/black"/>

            <EditText
                android:inputType="number"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notoseriftc__medium"
                android:textColor="@color/black"
                android:layout_below="@+id/txt_firstname"
                android:includeFontPadding="false"
                android:text=""/>

            <TextView
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Address"
                android:textSize="16sp"
                android:includeFontPadding="false"
                android:fontFamily="@font/notoseriftc_light"
                android:textColor="@color/black"/>

            <EditText
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notoseriftc__medium"
                android:textColor="@color/black"
                android:layout_below="@+id/txt_firstname"
                android:includeFontPadding="false"
                android:text=""/>


            <TextView
                android:layout_marginTop="@dimen/dimen_20"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:fontFamily="@font/notoseriftc__medium"
                android:text="Special Date"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Occassion and Date"
                android:textSize="16sp"
                android:includeFontPadding="false"
                android:fontFamily="@font/notoseriftc_light"
                android:textColor="@color/black"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20">

                <EditText
                    android:textSize="16sp"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_alignParentLeft="true"
                    android:layout_width="match_parent"
                    android:layout_toEndOf="@+id/txt_date"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notoseriftc__medium"
                    android:textColor="@color/black"
                    android:includeFontPadding="false"
                    android:text="My Birthaday"/>


                <ImageView
                    android:layout_marginRight="@dimen/dimen_10"
                    android:id="@+id/img_callendar"
                    android:layout_centerInParent="true"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:background="@drawable/calendar"
                    android:layout_alignParentRight="true"/>

                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="26/06/1995"
                    android:layout_toLeftOf="@+id/img_callendar"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/notoseriftc__medium"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/dimen_5"/>



            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_update_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:letterSpacing="0.05"
        android:textAllCaps="false"
        android:background="#2F103F"
        android:fontFamily="@font/notoseriftc__medium"
        android:paddingTop="@dimen/dimen_10"
        android:includeFontPadding="false"
        android:paddingBottom="@dimen/dimen_10"
        android:text="Update profile"
        android:lineSpacingExtra="@dimen/dimen_11"
        android:textColor="@color/white"
        android:textSize="18sp" />

</RelativeLayout>