<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <CheckBox
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginTop="@dimen/dimen_10"
            android:id="@+id/sub_catgory_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fresh fruit juice"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:includeFontPadding="false"
            android:fontFamily="@font/notosanstc_medium"/>


        <TextView
            android:id="@+id/sub_category_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#888888"
            android:fontFamily="@font/notosanstc_regular"
            android:includeFontPadding="false"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/sub_catgory_checkbox"
            android:text="450"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginLeft="8dp"
            android:paddingTop="4dp"/>

    </RelativeLayout>

</FrameLayout>