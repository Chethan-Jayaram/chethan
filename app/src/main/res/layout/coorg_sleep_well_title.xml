<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/dimen_10"
    android:background="@color/white"
    android:paddingBottom="@dimen/dimen_10"
    android:orientation="vertical">


    <RelativeLayout
        android:paddingLeft="@dimen/dimen_10"
        android:paddingRight="@dimen/dimen_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_margin="2dp"
            android:background="@color/gray" />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/main_lyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/lyt_down"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5"
            android:layout_marginBottom="@dimen/dimen_5">

            <TextView
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/tv_sleepwell_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notoseriftc_bold"
                android:includeFontPadding="false"
                android:text="Deep Sleep Menu"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/ic_down_arrow"
                android:layout_marginRight="@dimen/dimen_10"/>
        </RelativeLayout>

        <TextView
            android:layout_marginLeft="@dimen/dimen_10"
            android:id="@+id/tv_coorg_sleepwell_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanstc_light"
            android:includeFontPadding="false"
            android:text="To help you attain deep sleep, and wake up refreshed, we have specially selected amenities available, on request. Please call Housekeeping at 4003 for assistance"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>


</LinearLayout>