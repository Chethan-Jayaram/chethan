<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dimen_5"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lyt">

            <RelativeLayout
                android:paddingLeft="@dimen/dimen_10"
                android:paddingRight="@dimen/dimen_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_margin="2dp"
                    android:background="@color/gray" />

            </RelativeLayout>
            <LinearLayout
                android:id="@+id/main_lyt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/lyt_down"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10">

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:layout_centerInParent="true"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/tv_sleepwell_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notoseriftc_bold"
                        android:includeFontPadding="false"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/img_dropdown"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        app:srcCompat="@drawable/ic_down_arrow"
                        android:layout_marginRight="@dimen/dimen_10"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="@dimen/dimen_5"
                    android:visibility="gone"
                    android:layout_marginBottom="@dimen/dimen_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lyt_desc">

                    <TextView
                        android:visibility="gone"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:id="@+id/tv_coorg_sleepwell_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosanstc_light"
                        android:includeFontPadding="false"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                </RelativeLayout>


            </LinearLayout>



        </RelativeLayout>

    </LinearLayout>




</FrameLayout>