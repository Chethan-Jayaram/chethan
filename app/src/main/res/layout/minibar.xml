<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_minibar_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#e6decc"
        android:fontFamily="@font/notosanstc_light"
        android:gravity="bottom"
        android:includeFontPadding="false"
        android:padding="@dimen/dimen_20"
        android:scaleType="centerCrop"
        android:textColor="#000000"
        android:textSize="16sp" />


    <TableLayout
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_minibar_desc"
        android:paddingLeft="@dimen/dimen_10"
        android:stretchColumns="0,1,2,"
        android:paddingRight="@dimen/dimen_10">

        <TableRow
            android:layout_height="0dp"
            android:layout_width="fill_parent"
            android:layout_margin="@dimen/dimen_1"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_margin="1dp"
                android:background="#FFFFFF"
                android:fontFamily="@font/notoseriftc__medium"
                android:gravity="center"
                android:text="Item"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Price per item "
                android:layout_margin="1dp"
                android:fontFamily="@font/notoseriftc__medium"
                android:layout_column="1"
                android:background="#FFFFFF"
                android:gravity="center"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Pre-ordered Qty"
                android:fontFamily="@font/notoseriftc__medium"
                android:layout_margin="1dp"
                android:background="#FFFFFF"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_column="2"
                />

        </TableRow>


    </TableLayout>



</RelativeLayout>