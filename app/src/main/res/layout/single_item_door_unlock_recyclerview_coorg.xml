<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/dimen_10"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/dimen_10"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent" 
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aurika, Coorg"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/notoseriftc__medium"
                android:includeFontPadding="false"
                android:gravity="center"
                android:padding="@dimen/dimen_10"/>

            <RelativeLayout
                android:id="@+id/lyt_view"
                android:paddingLeft="@dimen/dimen_10"
                android:paddingRight="@dimen/dimen_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_margin="2dp"
                    android:background="@color/gray" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Room No."
                android:textAllCaps="false"
                android:textSize="16sp"
                android:gravity="center"
                android:padding="@dimen/dimen_10"
                android:textColor="@color/black"
                android:fontFamily="@font/notoseriftc__medium"
                android:includeFontPadding="false"/>


            <TextView
                android:padding="@dimen/dimen_5"
                android:id="@+id/room_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAllCaps="false"
                android:textSize="32sp"
                android:gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/notoseriftc__medium"
                android:includeFontPadding="false"/>

            <LinearLayout
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginBottom="@dimen/dimen_20"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="0.5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Check-in "
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/notosanstc_regular"
                        android:includeFontPadding="false"/>

                    <TextView
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/dimen_5"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/check_in_coorg"
                        android:fontFamily="@font/notosanstc_regular"
                        android:textSize="16sp"
                        android:includeFontPadding="false"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_weight="0.5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Check-out"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/notosanstc_regular"
                        android:includeFontPadding="false"/>

                    <TextView
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/dimen_5"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/check_out_coorg"
                        android:fontFamily="@font/notosanstc_regular"
                        android:textSize="16sp"
                        android:includeFontPadding="false"/>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/bt_unlock_door"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UNLOCK DOOR"
                android:textColor="@color/white"
                android:background="@color/custom_purple"
                android:textSize="16sp"/>


        </LinearLayout>



    </androidx.cardview.widget.CardView>

</RelativeLayout>