<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginTop="@dimen/dimen_5"
        android:id="@+id/lyt_expand"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_hotel_title"
            android:textSize="16sp"
            android:fontFamily="@font/notoseriftc__medium"
            android:textColor="@color/black"
            android:text="Aurika,Coorg"
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_marginLeft="@dimen/dimen_20"
            android:includeFontPadding="false"/>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_40"
            android:layout_width="wrap_content"
            android:padding="@dimen/dimen_2"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dimen_5"
            android:layout_alignParentRight="true">

            <Button
                android:lineSpacingExtra="0dp"
                android:paddingBottom="@dimen/dimen_3"
                android:paddingRight="@dimen/dimen_5"
                android:paddingLeft="@dimen/dimen_5"
                android:paddingTop="@dimen/dimen_3"
                android:textAllCaps="false"
                android:id="@+id/bt_activity_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Completed"
                android:minHeight="@dimen/dimen_25"
                android:textColor="@color/white"
                android:background="@color/red"
                android:fontFamily="@font/notosanstc_medium"
                android:textSize="16sp"
                android:includeFontPadding="false"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:paddingBottom="@dimen/dimen_10"
            android:id="@+id/lytt"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_below="@+id/tv_hotel_title"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_20"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check in:"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/notosanstc_medium"
                    android:includeFontPadding="false"/>

                <TextView
                    android:id="@+id/tv_checkin_date"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="#6d6d6d"
                    android:fontFamily="@font/notosanstc_medium"
                    android:includeFontPadding="false"/>
                
                <LinearLayout
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No. of guests: "
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/notosanstc_medium"
                        android:includeFontPadding="false"/>

                    <TextView
                        android:id="@+id/tv_nymber_of_guests"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textSize="14sp"
                        android:textColor="#6d6d6d"
                        android:fontFamily="@font/notosanstc_medium"
                        android:includeFontPadding="false"/>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check out:"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/notosanstc_medium"
                    android:includeFontPadding="false"/>

                <TextView
                    android:id="@+id/tv_checkout_date"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="#6d6d6d"
                    android:fontFamily="@font/notosanstc_medium"
                    android:includeFontPadding="false"/>

                <LinearLayout
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No. of rooms: "
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/notosanstc_medium"
                        android:includeFontPadding="false"/>

                    <TextView
                        android:id="@+id/tv_number_of_rooms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="14sp"
                        android:textColor="#6d6d6d"
                        android:fontFamily="@font/notosanstc_medium"
                        android:includeFontPadding="false"/>

                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:id="@+id/drop_img"
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_right_arrow"
                android:layout_gravity="center_vertical"/>


        </LinearLayout>

        <RelativeLayout
            android:visibility="visible"
            android:layout_marginTop="@dimen/dimen_5"
            android:id="@+id/lyt_payment"
            android:layout_below="@+id/lytt"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/dimen_20"
                android:id="@+id/tv_price"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your bill due is"
                android:textSize="16sp"
                android:fontFamily="@font/notosanstc_regular"
                android:textColor="@color/black"
                android:includeFontPadding="false"/>
            <TextView
                android:layout_toLeftOf="@+id/activity_staus"
                android:layout_marginTop="@dimen/dimen_20"
                android:layout_toRightOf="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/total_price"
                android:text=""
                android:fontFamily="@font/notosanstc_medium"
                android:textColor="@color/black"
                android:includeFontPadding="false"
                android:layout_marginLeft="5dp"
                android:textSize="16sp"/>


            <androidx.cardview.widget.CardView
                android:layout_marginTop="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_40"
                android:layout_width="wrap_content"
                android:padding="@dimen/dimen_2"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/dimen_5"
                android:id="@+id/activity_staus"
                android:layout_alignParentRight="true">

                <Button
                    android:clickable="false"
                    android:id="@+id/btn_make_payment"
                    android:padding="@dimen/dimen_10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Make Payment"
                    android:textAllCaps="false"
                    android:minHeight="@dimen/dimen_25"
                    android:textColor="@color/white"
                    android:background="@color/custom_purple"
                    android:fontFamily="@font/notosanstc_medium"
                    android:textSize="14sp"
                    android:includeFontPadding="false"/>

            </androidx.cardview.widget.CardView>


        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:visibility="gone"
            android:layout_below="@+id/lyt_payment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mystay_inner_recyclerview"/>

    </RelativeLayout>

</FrameLayout>