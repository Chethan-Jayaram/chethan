<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/lyt_navigation"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:padding="@dimen/dimen_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--<de.hdodenhof.circleimageview.CircleImageView
        android:src="@color/colorPrimaryDark"
        android:id="@+id/navigation_bar_image"
        android:scaleType="centerCrop"
        android:padding="@dimen/dimen_5"
        android:layout_width="30dp"
        android:layout_height="30dp">
    </de.hdodenhof.circleimageview.CircleImageView>-->


    <ImageView
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:id="@+id/navigation_bar_image"/>


    <TextView
        android:layout_toLeftOf="@+id/img_navigation_drop_down"
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/navigation_bar_image"
        android:id="@+id/navigation_bar_text"
        android:textColor="#000000"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_gravity="center"
        android:fontFamily="@font/notosanstc_light"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp" >
    </TextView>


    <ImageView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ccp_down_arrow"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_centerInParent="true"
        android:id="@+id/img_navigation_drop_down"/>

</RelativeLayout>