<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="15dp">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/dimen_40"
        android:layout_marginTop="@dimen/dimen_20" />

    <LinearLayout
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/img_logo"
        android:layout_marginLeft="@dimen/dimen_30"
        android:layout_toRightOf="@+id/img_logo"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notoseriftc__medium"
            android:includeFontPadding="false"
            android:text="Aurika"
            android:textColor="@color/black"
            android:textSize="36dp" />

        <TextView
            android:id="@+id/item_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_2"
            android:fontFamily="@font/notosanstc_bold"
            android:includeFontPadding="false"
            android:text="Login to an unforgatable stay"
            android:textColor="@color/black"
            android:textSize="26dp" />
    </LinearLayout>

    <TextView
        android:textSize="30dp"
        android:id="@+id/item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_view"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_20"
        android:fontFamily="@font/notosanstc_regular"
        android:gravity="center"
        android:text="Use your fingerprint to verify your identity"
        android:textColor="@color/black" />


    <Button
        android:textSize="@dimen/dimen_36"
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_description"
        android:layout_marginTop="@dimen/dimen_20"
        android:background="@drawable/button_corner_radius"
        android:fontFamily="@font/notosanstc_medium"
        android:gravity="center"
        android:includeFontPadding="false"
        android:padding="@dimen/dimen_20"
        android:text="Cancel"
        android:textColor="@color/white" />

</RelativeLayout>