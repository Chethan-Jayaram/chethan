<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/login_bg"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="#99f8F1CD"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dimen_20"
        android:layout_gravity="center"
        android:layout_height="@dimen/dimen_45"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:textStyle="bold"
            android:id="@+id/top_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20"
            android:fontFamily="@font/notoseriftc__medium"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/login_msg"
            android:textColor="#420052"
            android:textSize="45sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="22dp"
            android:orientation="horizontal">

            <EditText
                android:fontFamily="@font/notoseriftc__medium"
                android:includeFontPadding="false"
                android:textCursorDrawable="@color/black"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:id="@+id/et_1"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/otp_bg"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center" />

            <EditText
                android:includeFontPadding="false"
                android:textCursorDrawable="@color/black"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/notoseriftc__medium"
                android:id="@+id/et_2"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/otp_bg"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center" />

            <EditText
                android:includeFontPadding="false"
                android:textCursorDrawable="@color/black"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/notoseriftc__medium"
                android:id="@+id/et_3"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/otp_bg"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center" />

            <EditText
                android:includeFontPadding="false"
                android:textCursorDrawable="@color/black"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/notoseriftc__medium"
                android:id="@+id/et_4"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/otp_bg"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center" />

        </LinearLayout>


        <Button
            android:layout_marginTop="@dimen/dimen_20"
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_80"
            android:layout_marginRight="@dimen/dimen_80"
            android:layout_marginBottom="@dimen/dimen_10"
            android:letterSpacing="0.1"
            android:background="@color/btn_color"
            android:fontFamily="@font/notoseriftc__medium"
            android:includeFontPadding="false"
            android:text="CONFIRM"
            android:paddingBottom="@dimen/dimen_30"
            android:paddingTop="30dp"
            android:lineSpacingExtra="@dimen/dimen_10"
            android:textColor="@color/white"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/forgot_mpin"
            android:layout_gravity="center"
            android:padding="@dimen/dimen_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20"
            android:fontFamily="@font/notoseriftc__medium"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="Forgot M-pin?"
            android:textColor="#420052"
            android:textStyle="bold"
            android:textSize="40sp" />

        <TextView
            android:layout_gravity="center"
            android:id="@+id/new_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20"
            android:fontFamily="@font/notoseriftc__medium"
            android:gravity="center"
            android:padding="@dimen/dimen_30"
            android:includeFontPadding="false"
            android:text="Don't have an account?"
            android:textColor="#420052"
            android:textStyle="bold"
            android:textSize="40sp" />

        <RelativeLayout
            android:layout_marginTop="@dimen/dimen_5"
            android:layout_marginLeft="130dp"
            android:layout_marginRight="130dp"
            android:layout_marginBottom="@dimen/dimen_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="wrap_content"
                android:layout_height="5dp"
                android:layout_margin="2dp"
                android:background="#420052" />


        </RelativeLayout>

        <TextView
            android:id="@+id/skip"
            android:padding="@dimen/dimen_30"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_35"
            android:layout_marginBottom="@dimen/dimen_30"
            android:fontFamily="@font/notoseriftc__medium"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="Skip >>"
            android:textColor="#420052"
            android:textSize="40sp"
            android:textStyle="bold"/>

    </LinearLayout>

</ScrollView>