<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login_bg"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="#99f8F1CD"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dimen_20"
        android:layout_gravity="center"
        android:layout_height="350dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_marginRight="@dimen/dimen_80"
            android:layout_marginLeft="@dimen/dimen_80"
            android:textStyle="bold"
            android:id="@+id/top_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20"
            android:fontFamily="@font/notoseriftc__medium"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="Reset your M-PIN?"
            android:textColor="#420052"
            android:textSize="45sp" />

        <com.hbb20.CountryCodePicker
            android:layout_marginTop="@dimen/dimen_15"
            android:id="@+id/country_code_picker"
            app:ccp_contentColor="@color/black"
            android:background="@drawable/otp_bg"
            app:ccp_textSize="35sp"
            app:ccp_textGravity="LEFT"
            app:ccpDialog_backgroundColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_10"
            android:layout_marginLeft="@dimen/dimen_30"
            android:layout_marginRight="@dimen/dimen_30"
            android:layout_marginBottom="@dimen/dimen_20"/>


        <EditText
            android:inputType="number"
            android:id="@+id/et_email_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_30"
            android:layout_marginLeft="@dimen/dimen_30"
            android:layout_marginBottom="@dimen/dimen_20"
            android:background="@drawable/otp_bg"
            android:fontFamily="@font/notoseriftc__medium"
            android:hint="Enter Phone Number"
            android:includeFontPadding="false"
            android:padding="@dimen/dimen_10"
            android:textColor="@color/black"
            android:textColorHint="#A3A3A3"
            android:textCursorDrawable="@color/black"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/login_with_email"
            android:layout_gravity="center"
            android:padding="@dimen/dimen_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notoseriftc__medium"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="Login with email?"
            android:textColor="#420052"
            android:textStyle="bold"
            android:textSize="30sp" />




        <TextView
            android:id="@+id/new_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notoseriftc__medium"
            android:gravity="center"
            android:padding="@dimen/dimen_10"
            android:includeFontPadding="false"
            android:text="Don't have an account? Register now!"
            android:textColor="#420052"
            android:textStyle="bold"
            android:textSize="30sp" />


        <LinearLayout
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/reset_mpin_checkbox"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dimen_4"
                android:fontFamily="@font/notoseriftc__medium"
                android:includeFontPadding="false"
                android:text="I agree with the terms and conditions and privacy policy"
                android:textColor="#420052"
                android:textSize="25sp" />
        </LinearLayout>


        <Button
            android:layout_marginTop="@dimen/dimen_30"
            android:id="@+id/btn_forgot_pin_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_60"
            android:layout_marginRight="@dimen/dimen_60"
            android:layout_marginBottom="@dimen/dimen_50"
            android:background="@color/btn_color"
            android:fontFamily="@font/notoseriftc__medium"
            android:paddingTop="@dimen/dimen_10"
            android:includeFontPadding="false"
            android:textAllCaps="false"
            android:paddingBottom="@dimen/dimen_10"
            android:text="Confirm and send OTP"
            android:lineSpacingExtra="@dimen/dimen_5"
            android:textColor="@color/white"
            android:textSize="40sp" />



    </LinearLayout>

</ScrollView>