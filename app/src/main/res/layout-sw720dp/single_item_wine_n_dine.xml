<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_30"
        android:background="@drawable/border_layout"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_coorg_wine_dine"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_gravity="center"
                android:scaleType="matrix" />

            <TextView
                android:id="@+id/tv_wine_dine_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_40"
                android:layout_marginTop="340dp"
                android:gravity="center"
                android:textSize="35sp"
                android:background="@drawable/border_edges"
                android:fontFamily="@font/notoseriftc_regular"
                android:includeFontPadding="false"
                android:padding="@dimen/dimen_20"
                android:textColor="@color/white" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_content_wine_dine_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_margin="@dimen/dimen_30"
            android:textSize="30sp"
            android:fontFamily="@font/notosanstc_light"
            android:gravity="center|start|end"
            android:justificationMode="inter_word"
            android:textColor="#000000" />

        <Button
            android:padding="@dimen/dimen_20"
            android:id="@+id/bt_wine_n_dine_reserve_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_20"
            android:layout_marginBottom="@dimen/dimen_30"
            android:background="@drawable/button_corner_radius"
            android:fontFamily="@font/notoseriftc__medium"
            android:includeFontPadding="false"
            android:lineSpacingExtra="@dimen/dimen_10"
            android:text="Reserve a table"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="35sp" />

        <RelativeLayout

            android:padding="@dimen/dimen_15"
            android:background="@drawable/textview_border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_toLeftOf="@+id/lyt_time"
                android:layout_marginRight="@dimen/dimen_30"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:id="@+id/tv_coorg_assistance"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/dimen_5"
                android:fontFamily="@font/notosanstc_bold"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:textSize="30sp" />
            <LinearLayout
                android:id="@+id/lyt_time"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/dimen_30"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dimen_5"
                    android:gravity="center_vertical"
                    android:src="@drawable/icon_clock" />

                <TextView
                    android:id="@+id/tv_from_time_wine_dine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:textColor="@color/black"
                    android:fontFamily="@font/notosanstc_bold"
                    android:layout_margin="@dimen/dimen_5"
                    android:textSize="30sp" />

                <TextView
                    android:fontFamily="@font/notosanstc_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="to"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:layout_marginRight="@dimen/dimen_5"/>

                <TextView
                    android:id="@+id/tv_to_time_wine_dine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/notosanstc_bold"
                    android:layout_margin="@dimen/dimen_5"
                    android:textSize="30sp" />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>