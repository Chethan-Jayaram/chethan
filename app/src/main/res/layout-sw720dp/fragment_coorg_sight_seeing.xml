<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--  app:contentScrim : The Toolbar color when the
              collapsing toolbar is collapsed. -->
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <!-- app:layout_collapseMode : parallax means an animation effect,
                 pin means fixed. -->

            <TextView
                android:id="@+id/tv_sight_seeing_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#e6decc"
                android:fontFamily="@font/notosanstc_light"
                android:gravity="bottom"
                android:text="Spread across 45 acres of land, with panoramic views of the rainforest. From undulating coffee plantations to the black treasures of pepper vines, from the ancient Kodavas culture to their authentic cuisine, explore the unique and unexplored world in the Western ghats of Southern India with Aurika, Coorg. \n \n Please place a request for a call from our travel desk, or call the Front Desk at 2001 for car hire and sightseeing assistance "
                android:includeFontPadding="false"
                android:padding="@dimen/dimen_20"
                android:scaleType="centerCrop"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_anchor="@+id/appBarLayout"
                app:layout_anchorGravity="center"
                app:layout_collapseMode="parallax" />


        </com.google.android.material.appbar.CollapsingToolbarLayout>


    </com.google.android.material.appbar.AppBarLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/appBarLayout"
        android:id="@+id/sight_seeing_recycler"
        android:layout_above="@+id/bt_sight_seeing_call_back"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dimen_40"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_10"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />


    <Button
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dimen_10"
        android:id="@+id/bt_sight_seeing_call_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/btn_color"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginRight="@dimen/dimen_15"
        android:layout_marginBottom="@dimen/dimen_10"
        android:fontFamily="@font/notoseriftc__medium"
        android:includeFontPadding="false"
        android:textAllCaps="false"
        android:paddingBottom="@dimen/dimen_10"
        android:text="Schedule call back"
        android:lineSpacingExtra="@dimen/dimen_11"
        android:textColor="@color/white"
        android:textSize="18sp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>