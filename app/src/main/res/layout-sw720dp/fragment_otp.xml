<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/new_coorg_login_image"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="#99f8F1CD"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dimen_40"
        android:layout_gravity="center"
        android:layout_height="345dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:textStyle="bold"
            android:id="@+id/top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_80"
            android:layout_marginRight="@dimen/dimen_80"
            android:layout_marginTop="@dimen/dimen_40"
            android:fontFamily="@font/notoseriftc__medium"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="Please enter the 6 digit verification code sent to you"
            android:textColor="#420052"
            android:textSize="40sp"/>

        <LinearLayout
            android:layout_marginLeft="@dimen/dimen_40"
            android:layout_marginRight="@dimen/dimen_40"
            android:layout_marginTop="@dimen/dimen_50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_margin="@dimen/dimen_10"
                android:fontFamily="@font/notoseriftc__medium"
                android:includeFontPadding="false"
                android:textCursorDrawable="@color/black"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:id="@+id/et_one"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/otp_bg"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center" />

            <EditText
                android:layout_margin="@dimen/dimen_10"
                android:includeFontPadding="false"
                android:textCursorDrawable="@color/black"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:fontFamily="@font/notoseriftc__medium"
                android:id="@+id/et_two"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/otp_bg"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center" />

            <EditText
                android:layout_margin="@dimen/dimen_10"
                android:includeFontPadding="false"
                android:textCursorDrawable="@color/black"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:fontFamily="@font/notoseriftc__medium"
                android:id="@+id/et_three"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/otp_bg"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center" />

            <EditText
                android:layout_margin="@dimen/dimen_10"
                android:includeFontPadding="false"
                android:textCursorDrawable="@color/black"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:fontFamily="@font/notoseriftc__medium"
                android:id="@+id/et_four"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/otp_bg"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center" />

            <EditText
                android:layout_margin="@dimen/dimen_10"
                android:includeFontPadding="false"
                android:textCursorDrawable="@color/black"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:fontFamily="@font/notoseriftc__medium"
                android:id="@+id/et_five"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/otp_bg"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center" />

            <EditText
                android:layout_margin="@dimen/dimen_10"
                android:includeFontPadding="false"
                android:textCursorDrawable="@color/black"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:fontFamily="@font/notoseriftc__medium"
                android:id="@+id/et_six"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@drawable/otp_bg"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_30"
            android:layout_marginBottom="@dimen/dimen_80">

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_resend_otp"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/notosanstc_medium"
                android:gravity="center"
                android:includeFontPadding="false"
                android:padding="@dimen/dimen_20"
                android:text="Resend OTP"
                android:textColor="#420052"
                android:textSize="35sp"
                android:textStyle="normal" />

            <TextView

                android:id="@+id/tv_resend_otp_timer"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/notosanstc_medium"
                android:gravity="center"
                android:includeFontPadding="false"
                android:padding="@dimen/dimen_20"
                android:textColor="#420052"
                android:textSize="35sp"
                android:textStyle="normal" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>