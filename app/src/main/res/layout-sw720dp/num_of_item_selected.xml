<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <RelativeLayout
            android:paddingTop="@dimen/dimen_5"
            android:paddingBottom="@dimen/dimen_5"
            android:gravity="center"
            android:layout_weight="0.5"
            android:background="#eee3cf"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_num_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanstc_medium"
                android:includeFontPadding="false"
                android:textSize="30sp"
                android:textColor="#000000"
                android:text="0 items"/>

            <TextView
                android:id="@+id/seperater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:layout_toRightOf="@+id/tv_num_items"
                android:fontFamily="@font/notosanstc_medium"
                android:includeFontPadding="false"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_marginRight="@dimen/dimen_5"/>


            <TextView
                android:id="@+id/tv_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹ 0.00"
                android:textSize="30sp"
                android:layout_toRightOf="@id/seperater"
                android:fontFamily="@font/notosanstc_medium"
                android:includeFontPadding="false"
                android:textColor="@color/black"/>


            <ImageView
                android:layout_marginRight="@dimen/dimen_8"
                android:layout_marginTop="@dimen/dimen_5"
                android:layout_below="@id/tv_num_items"
                android:src="@drawable/img_info"
                android:id="@+id/img"
                android:layout_width="15dp"
                android:layout_height="15dp"
                />

            <TextView
                android:id="@+id/info"
                android:layout_below="@id/tv_num_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Excluding all taxes"
                android:layout_toRightOf="@+id/img"
                android:fontFamily="@font/notosanstc_medium"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:textSize="15sp"/>


        </RelativeLayout>

        <RelativeLayout

            android:padding="@dimen/dimen_30"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_weight="0.5"
            android:background="#d8cbb7"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/view_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanstc_bold"
                android:includeFontPadding="false"
                android:text="Place Order"
                android:textColor="@color/black"
                android:textSize="30sp" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>