<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <RelativeLayout
       android:layout_centerVertical="true"
       android:layout_centerHorizontal="true"
       android:layout_width="550dp"
       android:layout_height="700dp"
       android:background="@color/white">

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="-15dp"
          android:layout_marginTop="-65dp"
          android:alpha="0.1" />

      <RelativeLayout
          android:id="@+id/img_round"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="40dp">

         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true" />

         <ImageView
             android:id="@+id/iv_done"
             android:layout_width="145dp"
             android:layout_height="145dp"
             app:srcCompat="@drawable/location_icon"
             android:layout_centerHorizontal="true"
             android:layout_centerVertical="true" />
      </RelativeLayout>
      <TextView
          android:id="@+id/welcome_txt"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/img_round"
          android:layout_marginTop="40dp"
          android:includeFontPadding="false"
          android:lineHeight="38sp"
          android:lineSpacingExtra="4sp"
          android:textAlignment="center"
          android:text="Location Permission"
          android:textColor="@color/black"
          android:fontFamily="@font/notoseriftc__medium"
          android:textSize="26sp" />


      <TextView
          android:id="@+id/desciption"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/welcome_txt"
  android:layout_margin="50dp"
          android:includeFontPadding="false"

            android:lineSpacingExtra="5sp"
          android:textAlignment="center"



          android:text="@string/location_permission_msg"
          android:textColor="@color/black"
          android:fontFamily="@font/notosanstc_regular"
          android:textSize="26sp" />

      <Button
          android:id="@+id/btn_enable"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_margin="20dp"
          android:alpha="0.85"
          android:textSize="20sp"
          android:layout_alignParentBottom="true"
          android:includeFontPadding="false"
          android:text="Enable" />
      <!--<Button
          android:id="@+id/btn_deny"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_margin="20dp"
          android:layout_alignParentBottom="true"
          android:alpha="0.85"
          android:textSize="20sp"
          android:includeFontPadding="false"
          android:text="Deny" />-->


   </RelativeLayout>
</RelativeLayout>