<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="16dp"
            android:id="@+id/img_1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="29dp"
            android:src="@drawable/purple_bullet" />


        <TextView
            android:layout_marginTop="@dimen/dimen_5"
            android:id="@+id/lunch_date"
            android:layout_marginLeft="@dimen/dimen_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lunch at Mirasa"
            android:textColor="#010101"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/img_1"
            android:fontFamily="@font/notoseriftc__medium"
            android:lineSpacingExtra="10.7sp"/>

        <TextView
            android:layout_marginTop="@dimen/dimen_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completed"
            android:layout_alignParentRight="true"
            android:textColor="#ffffff"
            android:padding="@dimen/dimen_10"
            android:textSize="20sp"
            android:background="#ff5325"
            android:textStyle="normal"
            android:lineSpacingExtra="14sp"
            android:layout_marginRight="@dimen/dimen_40"/>

        <TextView
            android:id="@+id/txt_date_format"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lunch Date: "
            android:layout_toRightOf="@+id/img_1"
            android:layout_marginLeft="@dimen/dimen_8"
            android:layout_below="@+id/lunch_date"
            android:textColor="#010101"
            android:textSize="16sp"
            android:layout_marginBottom="@dimen/dimen_10"
            android:fontFamily="@font/notoseriftc__medium" />

        <TextView
            android:id="@+id/date_format"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txt_date_format"
            android:text="3rd feb, 2020"
            android:layout_below="@id/lunch_date"
            android:textSize="16sp"
            android:textColor="#6d6d6d"
            android:fontFamily="@font/notoseriftc__medium"/>

        <TextView
            android:id="@+id/txt_time_format"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lunch time: "
            android:layout_below="@+id/lunch_date"
            android:fontFamily="@font/notoseriftc__medium"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/date_format"
            android:layout_marginLeft="130dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/time_format"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1:30PM"
            android:fontFamily="@font/notoseriftc__medium"
            android:layout_below="@+id/lunch_date"
            android:layout_toRightOf="@+id/txt_time_format"
            android:textSize="16sp"
            android:textColor="#6d6d6d"/>

        <TextView
            android:id="@+id/txt_guest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No. of guests: "
            android:fontFamily="@font/notoseriftc__medium"
            android:textColor="@color/black"
            android:layout_toLeftOf="@+id/guets_format_count"
            android:textSize="16sp"
            android:layout_below="@+id/lunch_date"/>

        <TextView
            android:id="@+id/guets_format_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="16sp"
            android:fontFamily="@font/notoseriftc__medium"
            android:layout_below="@id/lunch_date"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"/>
    </RelativeLayout>

</RelativeLayout>